<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ComputerStoreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ComputerStoreApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ComputerStoreApp">
    <TabBar>
        <Tab Title="Home"
             Icon="laptop.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        
        <Tab Title="Store" Icon="store.png">
            <ShellContent ContentTemplate="{DataTemplate local:StorePage}" Route="StorePage"/>
        </Tab>
        
        <Tab Title="Shop" Icon="shop.png">
            <ShellContent ContentTemplate="{DataTemplate local:ShopPage}" Route="ShopPage"/>
        </Tab>
        
        <Tab Title="Payment" Icon="card.png">
            <ShellContent ContentTemplate="{DataTemplate local:PaymentPage}" Route="PaymentPage"/>
        </Tab>
    </TabBar>
</Shell>
